<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item>
        <shape>
            <solid android:color="#66000000"/> <!-- Цвет тени (полупрозрачный черный) -->
            <corners android:radius="16dp"/>  <!-- Радиус закругления -->
        </shape>
    </item>
    <!-- Основной фон -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#e2e2e2"/>  <!-- Цвет фона -->
            <corners android:radius="16dp"/> <!-- Радиус закругления -->
        </shape>
    </item>
</layer-list>
